{
  "$schema": "https://raw.githubusercontent.com/tauri-apps/tauri/dev/tooling/cli/schema.json",
  "productName": "Strudel Desktop",
  "version": "0.1.0",
  "identifier": "com.nukleas.strudel",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:4321",
    "frontendDist": "../app/dist"
  },
  "app": {
    "windows": [
      {
        "title": "Strudel Desktop",
        "width": 1800,
        "height": 1200,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "main-window",
          "description": "Main window capabilities for Strudel Desktop",
          "windows": ["main"],
          "permissions": [
            "core:default",
            "dialog:default"
          ]
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "category": "DeveloperTool",
    "copyright": "Copyright Â© 2024 Editorial Automation Systems LLC",
    "externalBin": [],
    "icon": [
      "icons/32x32.png",
      "icons/64x64.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "longDescription": "Strudel Desktop - A live coding environment for making music in the browser using the Strudel pattern language, a JavaScript port of TidalCycles.",
    "macOS": {
      "entitlements": null,
      "exceptionDomain": "",
      "frameworks": [],
      "providerShortName": "8832K8LBLC",
      "signingIdentity": "Developer ID Application: Editorial Automation Systems LLC (8832K8LBLC)",
      "minimumSystemVersion": "10.13"
    },
    "resources": [],
    "shortDescription": "Live coding music patterns",
    "targets": "all",
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    }
  }
}

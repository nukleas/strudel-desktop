{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "productName": "Strudel Desktop",
  "version": "0.1.0",
  "identifier": "com.nukleas.strudel",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:4321",
    "frontendDist": "../website/dist"
  },
  "app": {
    "windows": [
      {
        "title": "Strudel Desktop",
        "width": 1800,
        "height": 1200,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "category": "DeveloperTool",
    "copyright": "",
    "externalBin": [],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "longDescription": "",
    "macOS": {
      "entitlements": null,
      "exceptionDomain": "",
      "frameworks": [],
      "providerShortName": null,
      "signingIdentity": null
    },
    "resources": [],
    "shortDescription": "",
    "targets": "all",
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    }
  },
  "plugins": {
    "dialog": {
      "all": true
    },
    "fs": {
      "all": true,
      "scope": ["$HOME/**", "$HOME", "$HOME/*"]
    }
  }
}
